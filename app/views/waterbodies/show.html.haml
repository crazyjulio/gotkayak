%p
  %b Country:
  = @waterbody.country
%p
  %b State:
  = @waterbody.state
%p
  %b Name:
  = @waterbody.name
%p
  %b Water type:
  = @waterbody.water_type.capitalize
%h2 Trips:
%ul
  - @trips.each do |trip|
    %li
      = link_to trip.name, trip_path(trip)
- if @waterbody.image.blank?
  %p
    = link_to "Add an Image", new_image_path(:model => 'Waterbody', :model_id => @waterbody.id)
- else
  %p
    %b Image:
    %br
    = link_to image_tag(@waterbody.image.file.thumb), image_path(@waterbody.image.id)


= link_to 'Edit', edit_waterbody_path(@waterbody)
\|
= link_to "All Bodies O' Water", waterbodies_path
\|
= link_to "Add a trip", :controller => :trips, :action => :new, :waterbody_id => @waterbody.id
