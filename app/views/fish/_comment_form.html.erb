<div class="modal fade" id="comment-modal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          Leave a comment
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_tag("/comment", method: "post") do %>
        <%= label_tag(:comment, "Comment:") %>
        <%= text_area_tag(:comment, nil, class: 'form-control') %>
        <%= hidden_field_tag(:fish_id, nil, class: 'comment_fish_id') %>
        <%= hidden_field_tag(:page, params['page']) %>
        <hr/>
        <div class="float-right">
          <%= submit_tag("Comment", class: 'btn btn-primary') %>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>