= form_for @feature do |f|
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_area :description, :cols => 40, :rows => 5
  .field
    = f.label :manufacturer_id
    %br/
    = f.select :manufacturer_id, @manufacturers, :prompt => true
  .field
    = f.label :price, "Price (This field is optional, only fill it out if you are creating a optional feature)"
    %br/
    = f.text_field :price, :size => 4
  %br/
  .actions
    = f.submit 'Save'
