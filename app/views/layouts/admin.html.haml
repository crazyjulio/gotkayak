!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    %title Old Dominion Kayaks - Richmond Virginia's Fishing Kayak Source
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->
    / favicon
    %link{:HREF => "/images/favicon.ico", :REL => "SHORTCUT ICON"}
      = stylesheet_link_tag :all
      = javascript_include_tag :defaults
      /:javascript
      /        !window.jQuery && document.write('<script src="jquery.min.js"><\/script>');
      / tabs
      %script{:src => "/javascripts/jquery.idTabs.js", :type => "text/javascript"}
      / mousewheel
      %script{:src => "/javascripts/jquery.mousewheel-3.0.4.pack.js", :type => "text/javascript"}
      / fancybox
      %script{:src => "/javascripts/jquery.fancybox-1.3.4.js", :type => "text/javascript"}
      / jquery colorpicker
      %script{:src => "/javascripts/colorpicker.js", :type => "text/javascript"}

      = csrf_meta_tag
      = yield :head
  %body
    .c_all
      .c_masthead
        - if dadmin_signed_in?
          .logout
            = render :partial => 'shared/logout'
      .c_nav
        = render :partial => 'shared/navigation'
      .admin_main
        .admin_nav_container
          %span.admin_nav
            = render :partial => 'shared/admin_nav'
        .clearfix
        %br
        %p.notice
          = notice
        %p.alert
          = alert
        %br
        = yield

      .footer
        %ul
          %li= link_to "home", root_path
          %li= link_to "clearance", clearance_path
          %li= link_to "kayaks", kayaks_path
          %li= link_to "adventures", adventures_path
          %li= link_to "faqs", faqs_path
          %li= link_to "contact", contact_path
          %li= link_to "warranty", warranty_path
