= form_for @product do |f|
  .field
    = f.label :manufacturer_id
    %br
    = f.select :manufacturer_id, @manufacturers, :prompt => true
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :product_type
    %br
    = f.select :product_type, $product_types.to_a, :prompt => true
  .field
    = f.label :length, "Length, in inches"
    %br
    = f.text_field :length, :size => 3
  .field
    = f.label :width, "Width, in inches"
    %br
    = f.text_field :width, :size => 3
  .field
    = f.label :height, "Height, in inches"
    %br
    = f.text_field :height, :size => 3
  .field
    = f.label :weight, "Weight, in ounces"
    %br
    = f.text_field :weight, :size => 3
  .field
    = f.label :capacity, "Capacity, in ounces"
    %br
    = f.text_field :capacity, :size => 3
  .field
    Available colors:
    %br
    - @colors.each do |color|
      - checked = @product.colors.include?(color) ? true : false
      = check_box_tag "product[colors][]", color.id, checked, {:id => "product_colors_#{color.id}"}
      = color.name
      %br
  .field
    = f.label :description
    %br
    = f.text_area :description
  %br
  .actions
    = f.submit 'Save'
