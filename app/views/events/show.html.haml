%p
  %b Title:
  = @event.name
%p
  %b Body:
  = @event.body
%p
  %b Tag:
  = @event.tag
%br
- if @event.image.blank?
  %p
    = link_to "Add an Image", new_image_path(:model => 'Event', :model_id => @event.id)
- else
  %p
    %b Image:
    %br
    = link_to image_tag(@event.image.file.thumb), image_path(@event.image.id)

%br

= link_to 'Edit', edit_event_path(@event)
\|
= link_to 'All events', events_path
